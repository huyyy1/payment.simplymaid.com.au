<h1 class="ui header">
  Change password
</h1>
<br>

<%= form_with controller: "users", action: "profile_update", method: :patch, local: true, html: { class: "ui form"} do |form| %>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@user.errors.count, "error") %> prohibited
        this user from being saved:
      </h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <div class="three fields">
      <div class="field">
        <label>New password</label>
        <%= form.password_field :password, placeholder: "Password" %>
      </div>
    </div>
    <div class="three fields">
      <div class="field">
        <%= form.password_field :password_confirmation, placeholder: "Password confirmation" %>
      </div>
    </div>

    <div class="three fields">
      <div class="field">
        <div class="ui divider"></div>
        <label>Your current password</label>
        <%= form.password_field :current_password, placeholder: "Password" %>
      </div>
    </div>
  </div>
  <button class="ui brown button" type="submit">Update Password</button>

<% end %>
