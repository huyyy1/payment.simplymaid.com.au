<h1 class="ui header">
  Edit Team
</h1>
<br>

<%= form_with model: @team, local: true, html: { class: "ui form"} do |form| %>

  <% if params[:week_back].present? %>
    <input type="hidden" value="<%= params[:week_back] %>" name="week_back">
  <% end %>

  <% if @team.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@team.errors.count, "error") %> prohibited
        this team from being saved:
      </h2>
      <ul>
        <% @team.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <label>Name</label>
    <div class="three fields">
      <div class="field">
        <%= form.text_field :name, placeholder: "Name" %>
      </div>
      <div class="field">
        <%= form.text_field :first_name, placeholder: "First Name" %>
      </div>
      <div class="field">
        <%= form.text_field :last_name, placeholder: "Last Name" %>
      </div>
    </div>
  </div>
  <div class="field">
    <label>Address</label>
    <div class="two fields">
      <div class="field">
        <%= form.email_field :email, placeholder: "Email" %>
      </div>
      <div class="field">
        <%= form.text_field :address, placeholder: "Address" %>
      </div>
    </div>
  </div>
  <div class="field">
    <label>Account Details</label>
    <div class="four fields">
      <div class="field">
        <%= form.text_field :abn, placeholder: "ABN" %>
      </div>
      <div class="field">
        <%= form.text_field :billing_name, placeholder: "Billing Name" %>
      </div>
      <div class="field">
        <%= form.text_field :bsb, placeholder: "BSB" %>
      </div>
      <div class="field">
        <%= form.text_field :account_number, placeholder: "Account Number", maxlength: 10 %>
      </div>
    </div>
  </div>
  <div class="field">
    <div class="ui checkbox">
      <%= form.check_box :is_gst %>
      <label for="team_is_gst">Is GST Team</label>
    </div>
  </div>
  <div class="field">
    <div class="ui checkbox">
      <%= form.check_box :have_insurance_override %>
      <label for="team_have_insurance_override">Have insurance</label>
    </div><br>
    <small>This will override Launch27 info</small>
  </div>
  <div class="field">
    <div class="ui checkbox">
      <%= form.check_box :unsubscribed %>
      <label for="team_unsubscribed">Unsubscribed from email delivery</label>
    </div>
  </div>
  <div class="field">
    <label>Notes</label>
    <%= form.text_area :notes %>
  </div>

  <button class="ui button" type="submit">Update</button>
<% end %>
